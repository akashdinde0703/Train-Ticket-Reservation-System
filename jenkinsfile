pipeline {

agent {
        node {
label 'built-in'
customWorkspace '/mnt/jenkins'

}

}

satges {
      stage ('install  httpd') {
      steps {
      sh 'sudo yum update -y'
      sh 'sudo yum install httpd -y'  
    }
     
    }
  stage ('configure index.html') {

steps {
sh 'cd /mnt/jenkins'
sh 'echo this is index page of appllication>index.html'
}

stage ( 'paste in html dir ') {

steps {
sh 'cd /mnt/jenkins'
sh 'chmod 777 index/html'
sh 'cp -p index.html var/www/html'
}
}

stage ('start httpd service') {
steps {
sh 'sudo systemctl start httpd'
}

}
}
}
