pipeline {
    agent {
        node {
            label 'built-in'
            customWorkspace '/mnt/jenkins'
        }
    }

    stages {
        stage('Git Clone') {
            steps {
                sh 'rm -rf /mnt/pipeline/Train-Ticket-Reservation-System.github.io'
                sh 'git clone https://github.com/Aniket8-8-1995/Train-Ticket-Reservation-System.github.io.git'
            }
        }

        stage('Maven Build') {
            steps {
                dir('/mnt/pipeline/Train-Ticket-Reservation-System.github.io') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                dir('/mnt/pipeline/Train-Ticket-Reservation-System.github.io/target') {
                    sh 'sudo cp TrainBook-1.0.0-SNAPSHOT.war /mnt/apache-tomcat-9.0.83/webapps'
                }
            }
        }
    }
}
